<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender (optional) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/connect-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/connect-server-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <!-- Uncomment to enable file logging -->
        <!-- <appender-ref ref="FILE" /> -->
    </root>

    <!-- Component-specific logging -->
    <logger name="com.thunderduck.connect" level="DEBUG" />
    <logger name="com.thunderduck.logical" level="DEBUG" />
    <logger name="com.thunderduck.runtime" level="INFO" />
    <logger name="io.grpc" level="WARN" />
    <logger name="org.apache.arrow" level="WARN" />
    <logger name="org.duckdb" level="WARN" />

    <!-- Query timing instrumentation (set to WARN to disable timing logs) -->
    <logger name="com.thunderduck.connect.service.SparkConnectServiceImpl" level="INFO" />
</configuration>
